{
  "name": "back-core",
  "type": "module",
  "scripts": {
    "prepull:evm": "rm -rf ./src/db/schema/evm",
    "pull:evm": "drizzle-kit pull --config ./drizzle.evm.config.ts",
    "prepull:solana": "rm -rf ./src/db/schema/solana",
    "pull:solana": "drizzle-kit pull --config ./drizzle.solana.config.ts",
    "prestart": "npm run pull:evm && npm run pull:solana",
    "predev": "npm run prestart",
    "dev": "tsx watch src/index.ts"
  },
  "dependencies": {
    "@hono/node-server": "^1.13.8",
    "@hono/swagger-ui": "^0.5.0",
    "@hono/zod-openapi": "^0.18.4",
    "@hono/zod-validator": "^0.4.2",
    "@ponder/client": "^0.9.2",
    "drizzle-orm": "^0.39.1",
    "hono": "^4.6.20",
    "hono-simple-di": "^0.2.1",
    "ox": "^0.6.9",
    "pg": "^8.13.1",
    "ponder": "^0.9.2",
    "viem": "^2.21.3",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/node": "^20.11.17",
    "@types/pg": "^8.11.11",
    "dotenv": "^16.4.7",
    "drizzle-kit": "^0.30.4",
    "postgres": "^3.4.5",
    "tsx": "^4.7.1"
  }
}
